<header>
  <nav class="level">
    <img class="logo" src="img/note1.jpg" alt="logo">
  </nav>
</header>
<main>
  <div class="container has-text-centered">
    <p class="title is-1" style="font-size: 50px;">Login</p>
    <div class="columns is-mobile is-centered">
      <div class="column is-half">
        <form class="login">
          <div class="field">
            <p class="control has-icons-left has-icons-right">
              <input class="input is-primary" id="email-input" type="email" placeholder="Email" />
              <span class="icon is-small is-left">
                <i class="fas fa-envelope"></i>
              </span>
            </p>
          </div>
          <div class="field">
            <p class="control has-icons-left has-icons-right">
              <input class="input is-primary" id="password-input" type="password" placeholder="Password" />
              <span class="icon is-small is-left">
                <i class="fas fa-lock"></i>
              </span>
            </p>
          </div>
          <div class="buttons is-centered" style="margin-top: 5%;">
            <button class="button is-primary" type="submit">Login</button>
          </div>
        </form>
      </div>
    </div>
    <br />
    <p>Or sign up <a href="/">here</a></p>
  </div>
</main>
