<button id="add-a-note" class="is-left button is-primary is-rounded is-large ml-2 p-4">
  add a note
</button>
<section class="section">
  <main>
    <div class="tile is-ancestor">
      <div id="notes-section" class="tile is-parent">
        <div id="input-card"
          class="tile is-4 is-child box is-flex is-flex-direction-column is-justify-content-space-between m-2 hidden">
          <div class="card-content">
            <form class="field">
              <div class="control">
                <input id="inputTitle" class="title p-1 m-2" type="text" name="inputTitle"
                  placeholder="Enter a title" />
              </div>
              <div class="control">
                <input id="inputBody" class="p-1 m-2" type="text" name="inputBody" placeholder="Enter a note" />
              </div>
            </form>
          </div>
          <footer class="card-footer">
            <div class="card-footer-item"></div>
            <div class="card-footer-item"></div>
            <div class="card-footer-item"><button id="saveButton"
                class="button is-primary is-rounded is-large m-1 p-5 is-align-self-flex-end">
                <span class="icon is-medium">
                  <i class="far fa-save"></i>
                </span>
              </button></div>
          </footer>
        </div>
      </div>
    </div>
    </div>
  </main>
</section>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"
  integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
