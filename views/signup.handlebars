<!-- Header with simple navbar -->
<header>
  <nav class="level">
    <img class="logo" src="img/logo.png" alt="logo">
  </nav>
</header>
<main>
  <div class="container has-text-centered">
    <p class="title is-size-3-mobile is-size-3-touch is-size-1-tablet is-size-1-desktop m-0">
      Leave A Note</p>
    <p class="subtitle is-size-5-mobile is-size-5-touch is-size-3-tablet is-size-3-desktop m-0">Sign Up Form</p>

    <div class="columns is-mobile is-centered">
      <div class="column is-three-quarters-mobile is-half-tablet is-half-desktop">
        <form class="signup">
          <div class="field">
            <div class="control">
              <input class="input is-primary" id="firstname" type="firstname" placeholder="First Name"
                autocomplete="on" />
            </div>
          </div>
          <div class="field">
            <div class="control">
              <input class="input is-primary" id="lastname" type="lastname" placeholder="Last Name" autocomplete="on" />
            </div>
          </div>
          <div class="field">
            <div class="control has-icons-left has-icons-right">
              <input class="input is-primary" id="email" type="email" placeholder="Email" autocomplete="on" />
              <span class="icon is-small is-left">
                <i class="fas fa-envelope"></i>
              </span>
            </div>
          </div>
          <div class="field">
            <div class="control has-icons-left">
              <input class="input is-primary" id="password" type="password" placeholder="Password" autocomplete="off" />
              <span class="icon is-small is-left">
                <i class="fas fa-lock"></i>
              </span>
            </div>
          </div>
          <div class="field">
            <div class="control has-icons-left">
              <input class="input is-primary" id="password-confirm" type="password" placeholder="Confirm Password" autocomplete="off" />
              <span class="icon is-small is-left">
                <i class="fas fa-lock"></i>
              </span>
            </div>
          </div>
          <p id="error" class="help has-text-left is-danger"></p>
          <div class="buttons is-centered" style="margin-top: 5%;">
            <button class="button is-primary m-5" type="submit">Sign Up</button>
          </div>
        </form>
        <div class="m-4">
          <a href="/login">Go to login page.</a>
        </div>
      </div>
    </div>
  </div>
</main>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"
  integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
<script type="text/javascript" src="js/signup.js"></script>