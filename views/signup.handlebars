<!-- Header with simple navbar -->
<header>
  <nav class="level">
    <img class="logo" src="img/note1.jpg" alt="logo">
  </nav>
</header>
<main>
  <div class="container has-text-centered">
    <p class="title is-1" style="font-size: 50px;">
      Leave A Note</p>
    <p class="subtitle is-3">Sign Up Form</p>

    <div class="columns is-mobile is-centered">
      <div class="column is-half">
        <div class="field">
          <input class="input is-primary" id="firstname" type="firstname" placeholder="First Name" />
        </div>
        <div class="field">
          <input class="input is-primary" id="lastname" type="lastname" placeholder="Last Name" />
        </div>

        <div class="field">
          <p class="control has-icons-left has-icons-right">
            <input class="input is-primary" id="email" type="email" placeholder="Email" />
            <span class="icon is-small is-left">
              <i class="fas fa-envelope"></i>
            </span>
          </p>
        </div>
        <div>
          <p class="control has-icons-left">
            <input class="input is-primary" id="password" type="password" placeholder="Password" />
            <span class="icon is-small is-left">
              <i class="fas fa-lock"></i>
            </span>
          </p>
        </div>
        <div class="buttons is-centered" style="margin-top: 5%;">
          <button class="button is-primary" id="signup">Sign Up</button>
        </div>
        <div>
          <a href="/login">Go to login page.</a>
        </div> 
      </div>
    </div>
  </div>
</main>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"
  integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
<script type="text/javascript" src="js/signup.js"></script>
